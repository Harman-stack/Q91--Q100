Q91: Remove all vowels from a string.

/*
Sample Test Cases:
Input 1:
education
Output 1:
dctn

*/

#include <stdio.h>

int is_vowel(char ch)
{
    if (ch == 'a' || ch == 'e' || ch == 'i' || ch == 'o' || ch == 'u' ||
        ch == 'A' || ch == 'E' || ch == 'I' || ch == 'O' || ch == 'U')
    {
        return 1;
    }
    return 0;
}

int main()
{
    char str[100];
    char result[100];
    int i = 0;
    int j = 0;

    if (fgets(str, sizeof(str), stdin) == NULL)
    {
        return 1;
    }

    while (str[i] != '\0')
    {
        if (str[i] == '\n')
        {
            i++;
            continue;
        }

        if (!is_vowel(str[i]))
        {
            result[j] = str[i];
            j++;
        }
        i++;
    }

    result[j] = '\0';

    printf("%s\n", result);

    return 0;
}
