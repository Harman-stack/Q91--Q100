Q96: Reverse each word in a sentence without changing the word order.

/*
Sample Test Cases:
Input 1:
I love coding
Output 1:
I evol gnidoc

*/

#include <stdio.h>

void reverse_word(char *start, char *end)
{
    char temp;
    while (start < end)
    {
        temp = *start;
        *start = *end;
        *end = temp;
        start++;
        end--;
    }
}

int main()
{
    char str[1000];
    int i = 0;
    char *word_start = str;
    
    if (fgets(str, sizeof(str), stdin) == NULL)
    {
        return 1;
    }

    while (str[i] != '\0')
    {
        if (str[i] == ' ' || str[i] == '\n' || str[i] == '\t')
        {
            if (word_start < &str[i])
            {
                reverse_word(word_start, &str[i - 1]);
            }
            word_start = &str[i + 1];
        }
        
        i++;
    }

    if (word_start < &str[i-1])
    {
        reverse_word(word_start, &str[i-2]);
    }
    else if (word_start == &str[i-1] && str[i-1] != '\n')
    {
        reverse_word(word_start, &str[i-1]);
    }

    printf("%s", str);

    return 0;
}
