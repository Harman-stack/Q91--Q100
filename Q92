Q92: Find the first repeating lowercase alphabet in a string.

/*
Sample Test Cases:
Input 1:
stress
Output 1:
s

*/

#include <stdio.h>
#include <string.h>

int main()
{
    char str[100];
    int count[26] = {0};
    int i = 0;
    char repeating_char = 0;

    if (fgets(str, sizeof(str), stdin) == NULL)
    {
        return 1;
    }

    while (str[i] != '\0')
    {
        if (str[i] >= 'a' && str[i] <= 'z')
        {
            count[str[i] - 'a']++;
        }
        i++;
    }

    i = 0;
    while (str[i] != '\0')
    {
        if (str[i] >= 'a' && str[i] <= 'z')
        {
            if (count[str[i] - 'a'] > 1)
            {
                repeating_char = str[i];
                break;
            }
        }
        i++;
    }
    
    if (repeating_char != 0)
    {
        printf("%c\n", repeating_char);
    }

    return 0;
}