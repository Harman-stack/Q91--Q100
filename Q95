Q95: Check if one string is a rotation of another.

/*
Sample Test Cases:
Input 1:
abcde
deabc
Output 1:
Rotation

Input 2:
abc
acb
Output 2:
Not rotation

*/

#include <stdio.h>
#include <string.h>

int main()
{
    char str1[100];
    char str2[100];
    char temp[200];
    int len1 = 0;
    int len2 = 0;
    int i;
    int is_rotation = 0;

    /* Read first string */
    if (fgets(str1, sizeof(str1), stdin) == NULL) return 1;
    /* Read second string */
    if (fgets(str2, sizeof(str2), stdin) == NULL) return 1;

    /* Calculate length and strip newline from str1 */
    while (str1[len1] != '\0') len1++;
    if (len1 > 0 && str1[len1 - 1] == '\n') 
    {
        str1[len1 - 1] = '\0';
        len1--;
    }

    /* Calculate length and strip newline from str2 */
    while (str2[len2] != '\0') len2++;
    if (len2 > 0 && str2[len2 - 1] == '\n') 
    {
        str2[len2 - 1] = '\0';
        len2--;
    }

    /* Check if lengths are equal */
    if (len1 != len2 || len1 == 0)
    {
        printf("Not rotation\n");
        return 0;
    }

    /* Concatenate str1 with itself: temp = str1 + str1 */
    /* This creates "abcdeabcde" from "abcde" */
    for (i = 0; i < len1; i++)
    {
        temp[i] = str1[i];
    }
    for (i = 0; i < len1; i++)
    {
        temp[len1 + i] = str1[i];
    }
    temp[len1 * 2] = '\0';

    /* Check if str2 is a substring of temp */
    for (i = 0; temp[i] != '\0'; i++)
    {
        int j = 0;
        int k = i;
        while (str2[j] != '\0' && temp[k] == str2[j])
        {
            k++;
            j++;
        }
        
        /* If we reached the end of str2, it's a substring (and a rotation) */
        if (str2[j] == '\0')
        {
            is_rotation = 1;
            break;
        }
    }

    if (is_rotation)
    {
        printf("Rotation\n");
    }
    else
    {
        printf("Not rotation\n");
    }

    return 0;
}
